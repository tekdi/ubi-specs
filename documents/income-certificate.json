{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/income-certificate-vc-schema.json",
  "title": "Income Certificate Verifiable Credential",
  "type": "object",
  "required": ["fullName", "fatherName", "motherName", "addressLine1", "annualIncome", "issuedBy", "issuerAuthority", "issuedDate", "validUpto"],
  "properties": {
    "fullName": { "type": "string" },
    "fatherName": { "type": "string" },
    "motherName": { "type": "string" },
    "husbandName": { "type": "string" },
    "wifeName": { "type": "string" },
    "addressLine1": { "type": "string" },
    "district": { "type": "string" },
    "pin": { "type": "number" },
    "state": { "type": "string" },
    "country": { "type": "string" },
    "casteName": { "type": "string" },
    "casteCategory": { "type": "string" },
    "annualIncome": { "type": "number" },
    "agricultureIncome": { "type": "number" },
    "salaryIncome": { "type": "number" },
    "businessIncome": { "type": "number" },
    "otherIncome": { "type": "number" },
    "organizationName": { "type": "string" },
    "organizationType": { "type": "string" },
    "orgOfficerRank": { "type": "string" },
    "organizationAddress1": { "type": "string" },
    "organizationAddress2": { "type": "string" },
    "organizationDistrict": { "type": "string" },
    "organizationPin": { "type": "number" },
    "organizationState": { "type": "string" },
    "organizationCountry": { "type": "string" },
    "issuedBy": { "type": "string" },
    "issuerAuthority": { "type": "string" },
    "issuedDate": { "type": "string", "format": "date" },
    "validUpto": { "type": "string", "format": "date" }
  }
}
