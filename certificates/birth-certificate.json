{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BirthCertificateCredential",
  "description": "Schema for Verifiable Credential containing birth certificate information.",
  "type": "object",
  "properties": {
    "@context": {
      "type": ["string", "array"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"]
    },
    "issuer": {
      "type": ["string", "object"]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "firstName",
        "gender",
        "placeOfBirth",
        "issueDate",
        "issuedBy",
        "issuingAuthority"
      ],
      "properties": {
        "firstName": {
          "type": "string"
        },
        "middleName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "placeOfBirth": {
          "type": "string"
        },
        "addressLine1": {
          "type": "string"
        },
        "addressLine2": {
          "type": "string"
        },
        "district": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "pin": {
          "type": "number"
        },
        "issuedBy": {
          "type": "string"
        },
        "issueDate": {
          "type": "string",
          "format": "date"
        },
        "issuingAuthority": {
          "type": "string"
        },
        "issuingAuthorityAddress": {
          "type": "string"
        },
        "issuingAuthorityDistrict": {
          "type": "string"
        },
        "issuingAuthorityState": {
          "type": "string"
        },
        "issuingAuthorityPin": {
          "type": "number"
        }
      }
    }
  },
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject"]
}
